<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.akinaru.bleanalyzer">

    <uses-sdk android:minSdkVersion="18" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/roki_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.github.akinaru.bleanalyzer.activity.RFdroidActivity"></activity>
        <activity
            android:name="com.github.akinaru.bleanalyzer.activity.ScanActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.github.akinaru.bleanalyzer.activity.AnalyzerActivity"></activity>

        <service
            android:name="com.github.akinaru.bleanalyzer.service.BtAnalyzerService"
            android:enabled="true">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </service>

    </application>

</manifest>
